<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="68dp">

    <ImageView
        android:id="@+id/item_attend_state"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="start"
        android:src="@drawable/normal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="92dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_attend_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="on xx:xx"
            android:textColor="@color/grayMain"/>

        <TextView
            android:id="@+id/item_attend_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="off xx:xx"
            android:textColor="@color/grayMain"/>
    </LinearLayout>


    <TextView
        android:id="@+id/item_attend_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:text="xxxx-xx-xx"
        android:textColor="@color/grayMain"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/grayLine"/>


</FrameLayout>